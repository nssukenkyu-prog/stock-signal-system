{
    "name": "stock-signal-bot",
    "version": "1.0.0",
    "description": "Stock trading signal system with LINE notifications on Cloudflare Workers",
    "main": "src/index.ts",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "test": "vitest",
        "test:unit": "vitest run",
        "db:migrate": "wrangler d1 migrations apply stock-signals",
        "db:seed": "wrangler d1 execute stock-signals --file=./migrations/seed.sql"
    },
    "dependencies": {},
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20241205.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0",
        "wrangler": "^3.99.0"
    }
}